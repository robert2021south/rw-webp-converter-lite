# =========================
# WordPress PHP-FPM Image
# =========================

ARG PHP_VERSION=8.2
FROM wordpress:php${PHP_VERSION}-fpm

# =========================
# System & build dependencies
# =========================
RUN apt-get update \
  && apt-get install -y --no-install-recommends \
      libzip-dev zip \
      libpng-dev libjpeg-dev libfreetype6-dev \
      libonig-dev libxml2-dev libicu-dev \
      libwebp-dev \
      git unzip curl \
  && docker-php-ext-configure gd \
      --with-freetype \
      --with-jpeg \
      --with-webp \
  && docker-php-ext-install -j"$(nproc)" \
      mysqli pdo pdo_mysql \
      mbstring exif pcntl bcmath \
      gd zip intl opcache \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/*

# =========================
# PHP configuration (TEST FRIENDLY)
# =========================
# 放在 conf.d 里，确保优先级高
COPY php/conf.d/99-testing.ini /usr/local/etc/php/conf.d/99-testing.ini

# =========================
# Permissions
# =========================
# 确保 WordPress 目录属于 www-data
RUN chown -R www-data:www-data /var/www/html

WORKDIR /var/www/html

# =========================
# Composer (for Codeception / tooling)
# =========================
RUN curl -sS https://getcomposer.org/installer \
    | php -- --install-dir=/usr/local/bin --filename=composer

# =========================
# Useful defaults
# =========================
ENV PHP_MEMORY_LIMIT=256M
ENV PHP_UPLOAD_MAX_FILESIZE=32M
ENV PHP_POST_MAX_SIZE=32M
